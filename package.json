{
  "name": "grade-manager",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "electron-main/main.cjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dauris11/gradeapp.git"
  },
  "author": "Dauris11",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently -k \"npm run dev\" \"wait-on tcp:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "release": "node scripts/release.cjs",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@tauri-apps/cli": "^2.9.6",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^33.2.1",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/plugin-sql": "^2.3.1",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.5.0",
    "clsx": "^2.1.1",
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.23.26",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.560.0",
    "react-router-dom": "^7.10.1",
    "styled-components": "^6.1.19",
    "tailwind-merge": "^3.4.0"
  },
  "build": {
    "appId": "com.grademanager.app",
    "productName": "Grade Manager",
    "publish": {
      "provider": "github",
      "owner": "Dauris11",
      "repo": "gradeapp"
    },
    "directories": {
      "output": "dist-electron"
    },
    "win": {
      "target": "nsis",
      "icon": "public/imagenes/logo-principal.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "dist/**/*",
      "electron-main/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!node_modules/.bin",
          "!node_modules/**/*.md",
          "!**/*.db",
          "!**/*.sqlite",
          "!whatsapp-session"
        ]
      }
    ]
  }
}